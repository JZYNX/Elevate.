{
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.7.0"
  },
  "scripts": {
    "test": "jest",
    "start-dev": "npm install && concurrently \"npm run install:server\" \"npm run install:client --force\" \"npm run server\" \"npm run client\"",
    "start-prod": "npm run install:server && npm run install:client --force && npm run server && npm run client",
    "install:server": "cd server && npm install",
    "install:client": "cd crm && npm install",
    "server": "cd server && npm run devStart",
    "client": "cd crm && npm start"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "find-config": "^1.0.0",
    "mongoose": "^7.6.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "react": "^18.2.0",
    "react-scripts": "^5.0.1",
    "socket.io": "^4.7.2",
    "supertest": "^6.3.3"
  }
}
